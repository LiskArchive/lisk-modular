{
	"name": "lisk-core",
	"private": true,
	"version": "0.0.0",
	"description": "Reusable packages for use with the Lisk Core",
	"author": "Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
	"license": "GPL-3.0",
	"keywords": [
		"lisk",
		"blockchain"
	],
	"homepage": "https://github.com/LiskHQ/lisk-modular#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LiskHQ/lisk-modular.git"
	},
	"bugs": {
		"url": "https://github.com/LiskHQ/lisk-modular/issues"
	},
	"engines": {
		"node": ">=6.3 <=9.5",
		"npm": ">=3 <=5"
	},
	"scripts": {
		"clean:node_modules": "lerna clean",
		"format": "lerna run format",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"test": "NODE_ENV=test nyc mocha",
		"test:watch": "npm test -- --watch",
		"test:watch:min": "npm run test:watch -- --reporter=min",
		"cover": "if [ -z $JENKINS_HOME ]; then npm run cover:local; else npm run cover:ci; fi",
		"precommit": "lint-staged && npm run lint",
		"prepush": "npm run lint"
	},
	"dependencies": {
		"ajv": "^6.7.0",
		"axon": "^2.0.3",
		"axon-rpc": "^0.0.3",
		"babel-runtime": "6.26.0",
		"bluebird": "^3.5.1",
		"bunyan": "^1.8.12",
		"commander": "^2.16.0",
		"debug": "^3.1.0",
		"eventemitter2": "^5.0.1",
		"fs-extra": "^7.0.0",
		"json-refs": "^3.0.8",
		"z-schema": "^3.23.0"
	},
	"devDependencies": {
		"husky": "0.14.3",
		"lerna": "^2.11.0",
		"lint-staged": "4.2.3",
		"prettier": "1.12.1",
		"babel-cli": "6.26.0",
		"babel-plugin-istanbul": "4.1.5",
		"babel-plugin-transform-runtime": "6.23.0",
		"babel-preset-env": "1.6.1",
		"babel-register": "6.26.0",
		"chai": "4.1.2",
		"chai-as-promised": "7.1.1",
		"coveralls": "3.0.0",
		"eslint": "4.16.0",
		"eslint-config-airbnb-base": "12.1.0",
		"eslint-config-lisk-base": "1.0.0",
		"eslint-plugin-import": "2.8.0",
		"eslint-plugin-mocha": "4.11.0",
		"mocha": "4.0.1",
		"mocha-bdd": "0.1.2",
		"nyc": "11.3.0",
		"sinon": "4.1.2",
		"sinon-chai": "2.14.0",
		"snyk": "1.73.0"
	}
}
